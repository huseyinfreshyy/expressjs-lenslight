<%- include("partials/_header") %>
  <!-- body -->

  <body class="main-layout inner_page">
    <!-- loader  -->
    <div class="loader_bg">
      <div class="loader"><img src="/images/loading.gif" alt="#" /></div>
    </div>
    <!-- end loader -->

    <!-- header -->
    <%- include("partials/_menu") %>
      <!-- end header inner -->


      <!--  customers -->
      <div class="customers">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="titlepage text_align_center">
                <h2>Welcome <%= user.username %>
                </h2>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="satteb text_align_center">
                <p>fact that a reader will be distracted by the readable content of a page when looking at its
                  layout.
                </p>
                <h3>The point of using </h3>
                <i><img style="width: 200px; height: 200px; object-fit: cover;" src="<%= photos[0].url %>" alt="<%= photos[0].name %>" /></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <div style="justify-content: center;"class="row">
          <% if(!isFollower) { %>
          <div class="col-md-2">
            <div class="text_align_center">
                <a style="margin:20px auto;" class="read_more"
                  href="/users/<%= user._id %>/follow?_method=PUT">FOLLOW</a>      
            </div>
          </div>
          <% } else { %>
          <div class="col-md-2">
            <div class="text_align_center">
            <a style="margin:20px auto;" class="read_more"
                    href="/users/<%= user._id%>/unfollow?_method=PUT">UNFOLLOW</a>
                  </div>
          </div>
          <% } %>
        </div>
      </div>

      <div class="gallery">
        <div class="container_with">
           <div class="row">
              <div class="col-md-12">
                 <div class="titlepage text_align_center">
                    <h2>My Photos</h2>
                 </div>
              </div>
           </div>
           <div class="tz-gallery">
                    <div class="row">
                       <% for(photo of photos) { %>
                       <div class="col-lg-4 col-md-6 ma_bottom30">
                          <div class="lightbox">
                             <img src="<%= photo.url %>" alt="<%= photo.name %>">
                             <div class="view_main">
                               <div class="pose">
                               <a class="read_more" href="/photos/<%= photo._id %>"><img src="/images/ga.png" alt="#"/></a>
                               <h3 style="padding-top: 10px; padding-bottom: 10px;"><%= photo.name %></h3>
                               <p style="padding-top: 10px;"><% if (photo.description.length > 80) { %>
                                         <%= photo.description.substring(0, 77) + "..." %>
                                   <% } else { %>
                                         <%= photo.description %>
                                   <% } %>
                             </p>
                             </div>
                             </div>
                          </div> 
                       </div>
                       <%  } %>
              </div>
           </div>
        </div>
     </div>
      <!-- end customers  -->
      

    <!-- end footer -->
<%- include("partials/_footer") %>